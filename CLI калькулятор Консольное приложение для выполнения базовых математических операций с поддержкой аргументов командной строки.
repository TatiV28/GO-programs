// main.go
package main

import (
	"fmt"
	"os"
	"strconv"
)

func main() {
	if len(os.Args) < 4 {
		fmt.Println("Использование: go run main.go <число1> <операция> <число2>")
		fmt.Println("Операции: +, -, *, /")
		os.Exit(1)
	}

	num1, err := strconv.ParseFloat(os.Args[1], 64)
	if err != nil {
		fmt.Printf("Ошибка: '%s' не является числом\n", os.Args[1])
		os.Exit(1)
	}

	operation := os.Args[2]

	num2, err := strconv.ParseFloat(os.Args[3], 64)
	if err != nil {
		fmt.Printf("Ошибка: '%s' не является числом\n", os.Args[3])
		os.Exit(1)
	}

	result, err := calculate(num1, operation, num2)
	if err != nil {
		fmt.Printf("Ошибка: %v\n", err)
		os.Exit(1)
	}

	fmt.Printf("%.2f %s %.2f = %.2f\n", num1, operation, num2, result)
}

func calculate(num1 float64, operation string, num2 float64) (float64, error) {
	switch operation {
	case "+":
		return num1 + num2, nil
	case "-":
		return num1 - num2, nil
	case "*":
		return num1 * num2, nil
	case "/":
		if num2 == 0 {
			return 0, fmt.Errorf("деление на ноль")
		}
		return num1 / num2, nil
	default:
		return 0, fmt.Errorf("неизвестная операция: %s", operation)
	}
}

// Пример использования:
// go run main.go 10 + 5
// go run main.go 20 / 4
// go run main.go 7 * 3
